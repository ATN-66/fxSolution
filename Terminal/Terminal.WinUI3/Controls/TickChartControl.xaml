<!--  \Controls\TickChartControl.xaml  -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Terminal.WinUI3.Controls"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml">

    <Style TargetType="controls:TickChartControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TickChartControl">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" /><!--  Column for graph = 0 -->
                            <ColumnDefinition Width="*" /><!--  Column for Y-axis = 1 -->
                            <ColumnDefinition Width="Auto" /><!--  Column for Slider = 2 -->
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" /><!--  Row for graph  = 0 -->
                            <RowDefinition Height="*" /><!--  Row for X-axis = 1 -->
                            <!--<RowDefinition Height="*" />--><!--  Row for Debug = 2 -->
                        </Grid.RowDefinitions>
                        <win2d:CanvasControl
                            x:Name="graphCanvas"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            Foreground="{TemplateBinding Foreground}" />
                        <win2d:CanvasControl
                            x:Name="yAxisCanvas"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            Foreground="{TemplateBinding Foreground}" />
                        <Slider x:Name="SliderPipScale" Grid.Column="2" Grid.Row="0" Orientation="Vertical" Minimum="10" Maximum="200" StepFrequency="10" SmallChange="2" Value="{Binding PipScale, Mode=TwoWay}" />
                        <win2d:CanvasControl
                            x:Name="xAxisCanvas"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            Foreground="{TemplateBinding Foreground}" />
                        <!--<win2d:CanvasControl
                            x:Name="debugCanvas"
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            Foreground="{TemplateBinding Foreground}" />-->
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>